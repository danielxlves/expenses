<%- include('includes/head') %>
    <body class="bg-light">
        <%- include('includes/nav') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Login</h1>
                    <p class="text-center lead">Sign in or create your account below</p>

                    <%- include('includes/messages') %>

                    <div class="row">
                        <div class="col-lg">
                            <h4> Create your account</h4>
                            <form action="/login/register" method="POST">
                              <input type="hidden" name="_csrf" value=<%=csrfToken%>>
                                <div class="mb-3">
                                  <label for="exampleInputEmail1" class="form-label">Email address</label>
                                  <input type="email" class="form-control" name="email">
                                  <div id="emailHelp" class="form-text text-warning">We'll never share your email and password with anyone else.</div>
                                </div>
                                <div class="mb-3">
                                  <label for="exampleInputPassword1" class="form-label">Password</label>
                                  <input type="password" class="form-control" name="password">
                                </div>
                                <button type="submit" class="btn btn-primary">Create account</button>
                              </form>
                        </div>

                        <div class="col-lg">
                            <h4>Sign in</h4>
                            <form action="/login/in" method="POST">
                              <input type="hidden" name="_csrf" value=<%=csrfToken%>>
                                <div class="mb-3">
                                  <label for="exampleInputEmail1" class="form-label">Email address</label>
                                  <input type="email" class="form-control" name="email">
                                  <div id="emailHelp" class="form-text text-warning">We'll never share your email and password with anyone else.</div>
                                </div>
                                <div class="mb-3">
                                  <label for="exampleInputPassword1" class="form-label">Password</label>
                                  <input type="password" class="form-control" name="password">
                                </div>
                                <button type="submit" class="btn btn-primary">Sign in</button>
                              </form>

                        </div>
                    </div>

                </div>
                
                
                <div class="col-lg-2"></div>

            </div>
        </div>

        <%- include('includes/footer') %>
    </body>